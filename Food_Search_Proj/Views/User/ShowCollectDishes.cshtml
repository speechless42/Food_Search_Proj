@model IEnumerable<Food_Search_Proj.Models.Dishes>

@{
    Layout = "../Shared/_LayoutUser.cshtml";
    ViewBag.Title = "ShowDishes";
}



<div class="page-section">
    <div class="container">
        <div class="row align-items-center" style="border: 4px gray dashed; padding: 6px; background-color: #fafafa; font-family: DFKai-sb">
            <div class="col-lg-3 py-2">
                <div class="about-img">
                    <img src="~/img/yente.jpg" width="200">
                </div>
            </div>
            <div class="col-lg-9 py-2">
                <h2 style="font-family:DFKai-sb;  margin-right:4px;">
                    食譜料理
                </h2>
                <br>
                <h4>
                    料理是一件很神奇的事，將大小各異、口感不同的食材攬在一起，經過一番烹煮之後完成一道美味佳餚。這之間的療癒過程只有喜歡親手做飯的人才會懂，而根據觀察，熱愛下廚的人有著許多令人喜愛的特質，其實在朋友眼裡，常親自料理的人都非常有魅力。
                </h4>
            </div>
        </div>
    </div>
</div>


<p style="text-align: right">
    @Html.ActionLink("＋推薦菜餚", "RecommendDishes")
    @Html.ActionLink("回饋文章", "CreateArticle")
</p>


@foreach (var item in Model)
{
    <div class="page-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-3 py-2">
                    <div class="about-img">
                        <img src="data:image/png;base64,@Convert.ToBase64String(item.Dishes_Photo)" width="200" />
                    </div>
                </div>
                <div class="col-lg-7 py-2">
                    <div>
                        <h2 style="font-family:DFKai-sb">  @Html.DisplayFor(modelItem => item.Dishes_Name)</h2>
                    </div>
                    <div>
                        @Html.DisplayFor(modelItem => item.Dishes_Methods)
                    </div>
                    <br>
                    <a style="font-weight: bold; font-family: DFKai-sb">食材:</a>
                    @foreach (var items in item.Dishes_Contain_Food)
                    {
                        <a style="border: 1px gray dashed;font-family: DFKai-sb">@Html.DisplayFor(modelItem => items.Food.Food_Name)</a>
                    }
                    <div>
                        <a class="btn btn-outline-secondary " style="color:dimgrey;font-weight: bold">
                            @Html.DisplayNameFor(model => model.Dishes_Remark)
                        </a>
                        @Html.DisplayFor(modelItem => item.Dishes_Remark)
                    </div>
                    <div style="text-align: right" class="col-12 mt-3">
                        @Html.ActionLink("詳細", "DetailsDishes", new { id = item.Dishes_ID })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
}

