@model Food_Search_Proj.Models.Combo

@{
    ViewBag.Title = "EditCombo";
}

<h2>EditCombo</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Combo</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Combo_ID)

    <div class="form-group">
        @Html.LabelFor(model => model.Combo_Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Combo_Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Combo_Name, "", new { @class = "text-danger" })
        </div>
    </div>
    @{
        foreach (var item in Model.Set_Menu_Includes_Dishes)
        {
            Html.RenderPartial("EditComboDishes", item);
        }
    }


    <div class="form-group">
        @Html.LabelFor(model => model.Combo_Date, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Combo_Date, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Combo_Date, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
