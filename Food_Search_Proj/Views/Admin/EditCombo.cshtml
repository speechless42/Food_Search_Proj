@model Food_Search_Proj.Models.Combo

@{
    Layout = "../Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "EditCombo";
}

<script>
    $(function () {
        let count = 0;
        $("#AddRow").click(function () {
            count++;
            $.get("/Admin/ComboDishes", { count: count }, function (template) {
                $("#AddDiv").append(template)
            });
        });
    });

</script>


<h2>EditCombo</h2>


@using (Html.BeginForm("EditCombo", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Combo</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Combo_ID)

    <div class="form-group">
        @Html.LabelFor(model => model.Combo_Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Combo_Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Combo_Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div><input type="button" value="新增列" id="AddRow" /></div>
    <div id="AddDiv"></div>

    @{
        foreach (var items in Model.Set_Menu_Includes_Dishes)
        {
            Html.RenderPartial("EditComboDishes", items);
        }
    }


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="更改" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
