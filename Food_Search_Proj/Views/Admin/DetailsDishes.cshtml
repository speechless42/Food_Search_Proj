@model Food_Search_Proj.Models.Dishes

@{
    Layout = "../Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "DetailsDishes";
}



    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }


        @*標題*@
        <h2 style="font-family:DFKai-sb;  margin-right:4px;">
            @Html.DisplayFor(model => model.Dishes_Name)
        </h2>


        <div class="page-section">
            <div class="container">
                <div class="row align-items-center" style="border: 4px gray dashed; padding: 6px; background-color: #fafafa; font-family: DFKai-sb">
                    <div class="col-lg-3 py-2">
                        <div>
                            <img src="~/img/mukkath-3.jpg" width="500">
                        </div>
                    </div>
                    <div class="col-lg-9 py-2" style="text-align: right">

                        @Html.ActionLink(" ＊ 編輯菜餚", "EditDishes", new { id = Model.Dishes_ID }) |
                        @Html.ActionLink(" - 刪除菜餚", "DeleteDishes", new { id = Model.Dishes_ID }, new { onclick = "return confirm('確定要刪除嗎?')" })

                    </div>
                    <div class="col-md-10">

                        <h4> @Html.DisplayFor(model => model.Dishes_Methods)</h4>
                    </div>
                </div>
            </div>
        </div>

        <br />




        <div class="page-section">
            <div class="container">
                <div class="row align-items-center" style="border: 4px gray dashed; padding: 4px; background-color: #fafafa; font-family: DFKai-sb">
                    <div class="col-lg-3 py-2">
                        <h4>
                            食材名稱
                        </h4>
                    </div>
                    <h4 class="col-lg-9 py-2">
                        食材份量
                    </h4>
                    <hr />
                    @foreach (var item in Model.Dishes_Contain_Food)
                    {

                        <div class="col-lg-3 py-2">
                            <h5>
                                @item.Food.Food_Name
                            </h5>
                        </div>
                        <h5 class="col-lg-9 py-2">

                            @item.Count
                        </h5>
                        <hr />
                    }
                </div>
            </div>
        </div>

        <br />



        <div>
            @Html.ActionLink("瀏覽全部食譜", "ShowDishes")
        </div>
