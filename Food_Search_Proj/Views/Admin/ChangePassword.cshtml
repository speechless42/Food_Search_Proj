@model Food_Search_Proj.Models.AdminChangePassword
@{
    ViewBag.Title = "ChangePassword";
}
<h2>ChangePassword</h2>

<form method="post" action="ChangePassword" class="form-horizontal">

    <div class="form-group">
        @Html.LabelFor(m => m.Admin_Password, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Admin_Password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Admin_Password, "", new { @class = "text-danger" })
            <span class="field-validation-valid text-danger">@ViewBag.Error</span>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Admin_New_Password, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Admin_New_Password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Admin_New_Password, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Admin_New_Password_Again, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Admin_New_Password_Again, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Admin_New_Password_Again, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="儲存" class="btn btn-default" />
        </div>
    </div>
</form>


