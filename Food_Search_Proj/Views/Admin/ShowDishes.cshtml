@model IEnumerable<Food_Search_Proj.Models.Dishes>

@{
    ViewBag.Title = "ShowDishes";
}

<h2>顯示菜餚</h2>

<p>
    @Html.ActionLink("新增菜餚", "CreateDishes")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Dishes_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dishes_Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Referral_User_ID)
        </th>


        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Dishes_ID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Dishes_Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Referral_User_ID)
    </td>
    <td>
        @Html.ActionLink("編輯", "EditDishes", new { id = item.Dishes_ID }) |
        @Html.ActionLink("刪除", "Delete", new { id = item.Dishes_ID })
    </td>
</tr>
}

</table>
