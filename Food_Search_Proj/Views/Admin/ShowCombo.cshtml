    ViewBag.Title = "ShowCombo";
}

<h2>ShowCombo</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Combo_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Combo_Date)
        </th>
